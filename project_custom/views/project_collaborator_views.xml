<odoo>
    <data>
        <record id="view_project_collaborator_tree" model="ir.ui.view">
        <field name="name">project.collaborator.tree</field>
        <field name="model">project.collaborator</field>
        <field name="arch" type="xml">
<!--         not work at tree colors="green:status=='active';red:status=='inactive'"   -->
            <tree >
                <field name="employee_id"/>
                <field name="status"/>
                <button name="set_active" string="Activate" type="object"
                        attrs="{'invisible': [('status', '=', 'active')]}" />
                <button name="set_inactive" string="Deactivate" type="object"
                        attrs="{'invisible': [('status', '=', 'inactive')]}" />
            </tree>
        </field>
    </record>
    </data>
</odoo>