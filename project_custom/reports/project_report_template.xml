<odoo>
    <template id="report_project_pdf_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">

                <div class="page">
                    <h2>Project Report</h2>

                    <p><strong>Project Name:</strong> <span t-field="doc.name"/></p>
                    <p><strong>Start Date:</strong> <span t-field="doc.date_start"/></p>
                    <p><strong>GitHub Repo Name:</strong> <span t-field="doc.github_repo_name"/></p>
                    <p><strong>GitHub Repo URL:</strong> <a t-att-href="doc.github_repo_url" t-esc="doc.github_repo_url"/></p>
                    <p><strong>Odoo Version:</strong> <span t-field="doc.odoo_version"/></p>
                    <p><strong>Odoo Type:</strong> <span t-field="doc.odoo_type"/></p>
                    <p><strong>Hosting:</strong> <span t-field="doc.hosting"/></p>

                    <h3>Collaborators:</h3>
                    <ul>
                        <t t-foreach="doc.collaborators_ids" t-as="collab">
                            <li>
                                <span t-esc="collab.employee_id.name"/> -
                                <span t-esc="collab.status"/>
                            </li>
                        </t>
                    </ul>
                </div>

            </t>
        </t>
    </template>
</odoo>